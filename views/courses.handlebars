<main class="mn-inner container">
  <div class="row">
    <div class="col s12">
      <div class="page-title">Offered Courses</div>
    </div>
    <div class="col s12">
      <div class="grid" style="position: relative; height: 2330px;">
        {{#each classes}}
        <div class="grid-item" style="position: absolute; left: 0px; top: 0px;">
          <div class="card">
            <div class="card-image">
              <img src="assets/images/card-image.jpg" alt="">
              <span class="card-title">{{title}}</span>
            </div>
            <div class="card-content">
              <p>{{description}}</p>
            </div>
            <div class="card-action blue-link">
              <a href="/classes/{{id}}/details">View Class</a>
            </div>
          </div>
        </div>
        <!-- end item 1 -->
      </div>
    </div>
  </div>
</main>
